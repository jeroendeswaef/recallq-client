{
	"extends": [
		"airbnb",
		"plugin:flowtype/recommended",
		"prettier",
		"prettier/react"
	],
	"plugins": [
		"prettier",
		"eslint-plugin-flowtype"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalDecorators": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	}
}
